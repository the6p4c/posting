---
import "@fontsource/inter";
import "posting/styles";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />

    <title>posting template site</title>
  </head>
  <body>
    <main class="container">
      <slot />
    </main>
  </body>
</html>

<style>
  .container {
    max-width: 35rem;
  }
</style>

<style is:global>
  body {
    background: #222;
    color: #fff;
    font-family: Inter, sans-serif;
  }

  .thread {
    margin: 1rem 0;
    padding: 0.5rem;
    border: 1px dashed #555;
  }

  .post > header {
    border-bottom: 1px solid #555;
  }

  .post > footer {
    border-top: 1px solid #555;
  }

  .meta {
    color: #777;
  }

  .meta a {
    color: inherit;
    text-decoration: none;
  }

  .meta a:hover {
    color: #999;
  }
</style>
